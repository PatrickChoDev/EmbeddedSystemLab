/* USER CODE BEGIN Header_uart_thread */
/**
* @brief Function implementing the uart1 thread.
* @param argument: Not used
* @retval None
*/
/* USER CODE END Header_uart_thread */
void uart_thread(void *argument)
{
  /* USER CODE BEGIN uart_thread */
	T_MEAS    mptr;
	int threadId = 0;
	int idx = 0;
	for (;;) {
		mptr -> ID = idx;
		mptr -> TID = threadId;
		osMessageQueuePut(task_queueHandle, &mptr, osWaitForever);
		idx++;
//		osMutexRelease(uartHandle);
		osDelay(100);
	}
  /* USER CODE END uart_thread */
}

/* USER CODE BEGIN Header_uart2_thread */
/**
* @brief Function implementing the uart2 thread.
* @param argument: Not used
* @retval None
*/
/* USER CODE END Header_uart2_thread */
void uart2_thread(void *argument)
{
  /* USER CODE BEGIN uart2_thread */
	int threadId = 1;
	int idx = 0;
	for (;;) {
//		osMutexWait(uartHandle, osWaitForever);
		T_MEAS    *mptr;
//		mptr = osPoolAlloc(mpool);
		mptr -> ID = idx;
		mptr -> TID = threadId;
		osMessageQueuePut(task_queueHandle, "HI", osWaitForever);
		idx++;
//		osMutexRelease(uartHandle);
		osDelay(100);
	}
  /* USER CODE END uart2_thread */
}

/* USER CODE BEGIN Header_queue_thread */
/**
* @brief Function implementing the queue thread.
* @param argument: Not used
* @retval None
*/
/* USER CODE END Header_queue_thread */
void queue_thread(void *argument)
{
  /* USER CODE BEGIN queue_thread */
//	T_MEAS  *rptr;
	  osEvent  evt;
	  char buffer[32];
	  for (;;) {
//		  osMutexWait(uartHandle, osWaitForever);
	    evt = osMessageQueueGet(task_queueHandle,"HELLO",1,1000);  // wait for message
	    if (evt.status == osEventMessage) {
	      rptr = evt.value.p;
//	      sprintf(buffer,"TID: %d %d\r\n", rptr->TID,rptr->ID);
//	      buffer = evt.;
	      HAL_UART_Transmit(&huart2, buffer, 32, 1000);
//	      osPoolFree(mpool, rptr);                  // free memory allocated for message
//	      osMutexRelease(uartHandle);
	      osDelay(100);
	    }
	  }
  /* USER CODE END queue_thread */
}

